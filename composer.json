{
    "name": "baril/bonsai",
    "description": "An implementation of the Closure Tables pattern for Eloquent.",
    "keywords": [
        "laravel",
        "eloquent",
        "tree",
        "hierarchy",
        "hierarchical data",
        "closure tables",
        "closures",
        "adjacency list",
        "nested set"
    ],
    "license": "MIT",
    "type": "library",
    "require": {
        "illuminate/database": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/console": "^8.0|^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.23|^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "squizlabs/php_codesniffer": "^3.0",
        "baril/orderly": "*@dev"
    },
    "autoload": {
        "psr-4": {
            "Baril\\Bonsai\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Baril\\Bonsai\\Tests\\": "tests/",
            "Baril\\Bonsai\\Tests\\Factories\\": "tests/database/factories/"
        }
    },
    "suggest": {
        "baril/octopus": "Required to use the $node->siblings() relation.",
        "baril/orderly": "Required for ordered trees."
    },
    "extra": {
        "laravel": {
            "providers": [
                "Baril\\Bonsai\\BonsaiServiceProvider"
            ]
        }
    }
}
